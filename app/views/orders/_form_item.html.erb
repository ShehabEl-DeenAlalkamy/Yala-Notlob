<%= form_with(model: [ @order, @order.order_members.build ], local:false) do |form| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :Item %>
       <%= form.text_field :item, class:"form-control", placeholder: "Type the food item", :required => true %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :Amount %>
      <%= form.number_field :amount, min: 0, class:"form-control", :required => true %>
    </div>
  </div>
  <div class="form-row mt-1">
    <div class="form-group col-md-6">
      <%= form.label :Price %>
      <%= form.number_field :price, step: :any, min: 0, class:"form-control", :required => true %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :Comment %>
      <%= form.text_field :comment, class:"form-control", placeholder:"Type your comment" %>
    </div>
  </div>
  
  <button type="submit" class="btn btn-success btn-block mt-3">Add Item</button>
<% end %>
