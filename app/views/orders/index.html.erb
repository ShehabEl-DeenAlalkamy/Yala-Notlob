
<%####################################%>
<div class="card mt-5">
    <div class="card-header text-center">
        <h3>
        <i class="bi bi-clipboard-check"></i>
            Orders
        </h3>
    </div>
    <div class="card-body">
          <%= button_to "Create new order", new_order_path, :method => "get", class:"btn btn-success btn-lg btn-block", style:"color:white" %>
    </div>
</div>

<%####################################%>
<style>
  .thead-cusom{
    background-color: #FF5A01;
    color: white;
  }
</style>
<div class="card mt-4">
<table class="table text-center ">
  <thead class="thead-cusom">
    <tr>
      <th scope="col">Order</th>
      <th scope="col">Restaurante</th>
      <th scope="col">Invited</th>
      <th scope="col">Joined</th>
      <th scope="col">Status</th>
      <th scope="col" colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
   <% @orders.each do |order| %>
    <tr id="<%= order.id %>">
      <td><%= order.mealtype %></td>
      <td><%= order.resturant_name %></td>
      <td><%= order.invited_members.count %></td>
      <td><%= order.invited_members.where(joind: true).count %></td>
      <td class="status"><%= order.status %></td>
      <% if order.user == current_user && order.status == "Active" %>
        <td class="view"><%= link_to "View", order %></td>
        <td class="finish"><%= link_to 'Finish', [order], remote: true,
                    method: :put,
                    data: { confirm: "Are you sure?" } %></th>
        <td class="cancel"><%= link_to 'Cancel', [order], remote: true,
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></th>
    <% else %>
        <td><%= link_to "View", order %></td>
    <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
