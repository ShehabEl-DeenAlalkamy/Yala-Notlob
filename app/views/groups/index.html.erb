<div class="row">
  <div class="col-sm-4 mb-3 mt-4">
    <div class="card bg-light">
      <h3><div class="card-header card-custom">My Groups</div></h3>
      <div class="card-body">
        <%= render @groups %>
      </div>
    </div>
  </div>

  <div class="col-sm-8 mb-3 mt-4">
