<h1>Friends#destroy</h1>
<p>Find me in app/views/friends/destroy.html.erb</p>
<hr />
  <h3 class="w-25"> Friends List </h3>
  <div class="row " style="top:0%, left:0%">
    <div class="col-md-10 row overflow-auto m-auto mt-5" style="top: 0%; left: 0%; max-height: 350px;">

      <% for friend in @friends %>
        <div class="col-md-4">
          <div class="row" style="top:0%, left:0%">
            <div class="col-md-3">
              <% if friend.image? %>
                <%= image_tag friend.image.url, style: "height:70px;width:70;" %>
              <% else %>
                <img src="https://i.ibb.co/SK3QN1j/unknown-image.jpg" alt="unknown-image" style="width: 70px;height: 70px;">
              <% end %>
            </div>
            <div class="col-md-7">
              <span class="col-md-12"> <%= friend.email %> </span><br>
              <br>
              <%= link_to "unfriend", friend_path(friend),
                          method: :delete,
                          ata: { confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>